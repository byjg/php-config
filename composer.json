{
  "name": "byjg/config",
  "description": "A very basic and minimalist PSR-11 implementation for config management and dependency injection.",
  "license": "MIT",
  "require": {
    "psr/container": "^2.0|^3.0",
    "psr/simple-cache": "^1.0|^2.0|^3.0",
    "php": ">=8.3 <8.6",
    "laravel/serializable-closure": "^1.3"
  },
  "require-dev": {
    "ext-json": "*",
    "byjg/cache-engine": "^6.0",
    "phpunit/phpunit": "^10.5|^11.5",
    "vimeo/psalm": "^5.9|^6.13"
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "ByJG\\Config\\": "src/"
    }
  },
  "suggest": {
    "ext-json": "*"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --threads=1"
  }
}
